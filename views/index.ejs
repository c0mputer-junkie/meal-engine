    <div class="row topBox">
      <div class="col-xs-6 col-md-4">

      <!-- add to its own button class  -->
      <input type="image" src="https://emojipedia-us.s3.amazonaws.com/thumbs/160/facebook/65/fork-and-knife_1f374.png" name="canvas" onClick="displayImage()" width= "50" value="Display Random Image"></input>
