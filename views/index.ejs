    <div class="col-xs-12 col-md-6 col-lg-6">
      <h1>Add Recipe</h1>
      <% if(errors){  %>
      <ul>
        <% errors.forEach(function(error){ %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>
      <form method="POST" action="/users/add">
          <label>Recipe Name</label><br>
          <input type='text' name='recipe_name'>
          <br>
          <label>Link</label><br>
          <input type='text' name='link_name'>
          <br><br>
