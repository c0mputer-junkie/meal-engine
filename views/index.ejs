      </form>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-6">
          <h1><%= title %></h1>
          <ul>
          <% users.forEach(function(user){ %>
            <li><%= user.recipe_name %>  - <a href=" <%= user.link_name %> " class="deleteUser" data-id=<%=user._id%>>Go to Recipe</a></li>
          <% }) %>
          </ul>
    </div>
